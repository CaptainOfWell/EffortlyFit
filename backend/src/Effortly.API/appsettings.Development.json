{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=effortlyfit_dev;Username=effortly_dev;Password=DevPassword123!"
  },
  "Jwt": {
    "Key": "This-is-a-sample-256-bit-secret-key-for-development-only!",
    "Issuer": "EffortlyFit",
    "Audience": "EffortlyFitUsers",
    "ExpirationMinutes": 60
  },
  "ApiDocumentation": {
    "Title": "EffortlyFit API",
    "Version": "v1",
    "Description": "Fitness tracking API for workout planning and progress monitoring",
    "Contact": {
      "Name": "EffortlyFit Team",
      "Email": "dev@effortlyfit.local"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5046",
      "https://localhost:7159"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Model.Validation": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/effortlyfit-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}